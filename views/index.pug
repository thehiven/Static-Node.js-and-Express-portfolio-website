extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Welcome to My Portfolio!

      p.lead.text-light
        | This is my portfolio. Here I present all projects that I have made since the beginning of my web developer journey.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`/static/images/${project.image_urls[0]}`)
            h5 #{project.project_name}
      
